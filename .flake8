[flake8]
max-line-length = 127
ignore = E302,E303,W293,W292,W291,E128,W391,F401,E305,E301,E402,F811
exclude = .git,__pycache__,build,dist,.venv,venv,migrations

if [ -d "app" ] || [ -d "src" ]; then
  echo "Running flake8 code quality check..."
  
  # Run flake8 with the configuration from .flake8
  flake8 app/ tests/
  
  echo "Flake8 check completed successfully"
else
  echo "No source directories found"
fi